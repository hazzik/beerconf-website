@using Brandy.Web.Require
@using Brandy.Security.Web.Forms

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    @Html.RequireStyleSheet(
        Url.Content("~/Content/reset.css"),
        Url.Content("~/Content/themes/base/minified/jquery-ui.min.css"),
        Url.Content("~/Content/bootstrap.min.css"),
        Url.Content("~/Content/bootstrap-responsive.min.css"),
        Url.Content("~/Content/Site.less"))

    @Html.RequireScript(
        Url.Content("~/Scripts/modernizr-2.6.2.js"), 
        Url.Content("~/Scripts/jquery-1.8.2.min.js"), 
        Url.Content("~/Scripts/jquery-ui-1.8.24.min.js"),
        Url.Content("~/Scripts/bootstrap.min.js"),
        Url.Content("~/Scripts/jquery.validate.min.js"),
        Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js"),
        Url.Content("~/Scripts/mvcfoolproof.unobtrusive.min.js"))

    @Html.OutputRequiredStyleSheets()
    @Html.OutputRequiredScripts()
</head>
    <body>
        <div class="container">
            <div class="navbar">
                <div class="navbar-inner">
                    <div class="container">
                        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </a>
 
                        <a class="brand" href="@Url.Action("Index", "Home")" id="title">beerconf.ru</a>
 
                        <div class="nav-collapse">
                            <ul class="nav pull-right">
                                <li class="divider-vertical"></li>
                                @Html.Partial("_LogOnPartial")
                            </ul>
                        </div>
                    </div>
                </div>
            </div> 
        </div>   
        <div id="main">
            <div id="left-column">
                <div id="main-menu">@Html.Partial("_Navigation")</div>
            </div>
            <div id="center-column">
                <div id="content" class="container">@RenderBody()</div>
            </div>
            <div id="right-column">
                @Html.Action("NextEvent", "Events")
            </div>
            <br class="clear"/>
        </div>
        <div id="footer">
            <div id="bottom-menu">@Html.Partial("_Navigation")</div>
            <div id="copyright">&copy; beerconf 2011-2012</div>
        </div>
