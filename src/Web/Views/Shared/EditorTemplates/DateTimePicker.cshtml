@using Brandy.Web.Require
@model DateTime?

@Html.RequireScript(
        Url.Content("~/Scripts/jquery-1.7.min.js"))
@Html.RequireScriptAsync(
        Url.Content("~/Scripts/jquery-ui-1.8.16.min.js"),
        Url.Content("~/Scripts/jquery.ui.datepicker-ru.js"),
        Url.Content("~/Scripts/BeerConf.js"))

@Html.TextBoxFor(_ => _, new { role = "datetimepicker", data_min_date = DateTime.Today.ToShortDateString() })